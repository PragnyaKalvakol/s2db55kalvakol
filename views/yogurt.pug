extends layout

block content

  h1= title
  p welcome to #{title}
   - 
  div(class= "container-fluid")
    div(class = "row")
      each item,index in results
        div(class= "col-sm-2" , onclick=`buy(${index})`) #{item.yogurt_flavour}<br>
        div(class= "col-sm-2", onclick=`buy(${index})`) #{item.yogurt_quantity}<br>
        div(class= "col-sm-2", onclick=`buy(${index})`) #{item.yogurt_cost}<br>

  script.
    function buy(itemNum){
      alert(`You purchased item ${itemNum+1}`)
    }